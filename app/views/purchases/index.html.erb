<p id="notice"><%= notice %></p>

<h1>Purchases</h1>

<table>
  <thead>
    <tr>
      <th>item</th>
      <th>store</th>
      <th>Location</th>
      <th>Purchasedate</th>
      <th>Deleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.item.name %></td>
        <td><%= purchase.item.store.name %></td>
        <td><%= purchase.item.store.location %></td>
        <td><%= purchase.purchaseDate %></td>
        <td><%= purchase.deleted %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

