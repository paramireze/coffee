<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="page-header">
          <h1>Recent Purchases</h1>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="section">
  <div class="container">
    <% @purchases.each do |purchase| %>
        <div class="row">
          <div class="col-md-2">
            <%= link_to user_path(purchase.buyers.first.user) do %>
              <% if purchase.buyers.first.user.image_url.present? %>
                  <%= image_tag purchase.buyers.first.user.image_url, class: 'img-circle img-responsive' %>
              <% else %>
                  <img src="http://pingendo.github.io/pingendo-bootstrap/assets/user_placeholder.png" class="img-circle img-responsive">
              <% end %>
            <% end %>
          </div>
          <div class="col-md-10">
            <h1><%= link_to purchase.item.brand, purchase.item %> </h1>
            <h3><%= purchase.item.price_field %></h3>
            <h3><%= purchase.purchase_date.to_s(:custom_datetime) %></h3>

            </dl>
            <p><%= purchase.item.description %>
          </div>
        </div>
        <hr />
    <% end %>
  </div>
</div>
