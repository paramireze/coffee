<div class="section section-info">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="page-header">
          <h1>Stores <small></small></h1>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="section section-info">
  <div class="container">
    <% @stores.each do | store | %>
        <div class="row">
          <div class="col-md-6">
            <img src="<%= store.image_url %>" class="img-responsive">
          </div><div class="col-md-6">
          <h1><%= link_to store.name, store_path(store) %></h1>
          <h3><%= store.location %></h3>
          <p>
            <%= store.description %>
          </p>
        </div>
    <% end %>
    </div>
  </div>
</div>