<h1>Home Page</h1>


<table class="table">
  <thead>
  <tr>
    <th></th>
    <th>Price</th>
    <th>Description</th>
    <th>Replaced by</th>
    <th>Replaced</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @items.each do |item| %>
      <tr>
        <td><%= item.price %></td>
        <td><%= item.brand %></td>
        <td><%= item.description %></td>
        <td><%= item.replaced_by %></td>
        <td><%= item.replaced %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

