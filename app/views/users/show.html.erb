<h2><%= @user.name %></h2>
<%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary' %> |
<%= link_to 'Show All Users', users_path, class: 'btn btn-primary' %>

<hr />
<dl class="row">
  <dt class="col-sm-2">avatar:</dt>
  <dd class="col-sm-10"><%= image_tag @user.avatar %></dd>
</dl>
<dl class="row">
  <dt class="col-sm-2">description:</dt>
  <dd class="col-sm-10"><%= @user.description %></dd>
</dl>

<h2>User Purchase History</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>purchase date</th>
      <th>item name</th>
      <th>item brand</th>
      <th>amount paid</th>
      <th>store</th>
    </tr>
  </thead>
  <tbody>
  <% @purchases.each do |purchase| %>
    <tr>
      <td><%= purchase.purchase_date.to_s(:custom_datetime) %></td>
      <td><%= purchase.item.item_type.name %></td>
      <td><%= purchase.item.brand %></td>
      <td><%= purchase.item.price_field %></td>
      <td><%= purchase.item.store.name %></td>
    </tr>
   <% end %>
  </tbody>
</table>