<% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
        <div class="container">
          <div  class="alert color-white alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>" role="alert">
            <button type="button" class="close color-white" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          </div>
        </div>
    <% end %>
<% end %>
