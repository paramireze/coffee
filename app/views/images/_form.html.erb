<%= form_for(image) do |f| %>
  <% if image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(image.errors.count, "error") %> prohibited this image from being saved:</h2>

      <ul>
      <% image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= f.label :image_url, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :image_url, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :image_type, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:image_type_id, ImageType.all, :id, :name)  %>
    </div>
  </div>


  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
