<h1>Images</h1>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>Image url</th>
      <th>Description</th>
      <th>Item Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.id %></td>
        <td width="20%"><img src="<%= image.image_url %>"  class="img-responsive"></td>
        <td>
          <%= image.image_url %><br />
          <%= image.description %>
        </td>
        <td><%= image.image_type.name %></td>
        <td><%= link_to 'Show', image %><br />
        <%= link_to 'Edit', edit_image_path(image) %><br />
        <%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path, class: 'btn btn-primary' %>
<%= link_to 'New Image Type', new_image_type_path, class: 'btn btn-primary' %>
