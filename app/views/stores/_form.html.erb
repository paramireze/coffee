<%= form_for(store) do |f| %>
  <% if store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= f.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>


  <div class="form-group row">
    <%= f.label :location, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :location, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :replaced_by, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.number_field :replaced_by, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :replaced, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.number_field :replaced, class: "form-control" %>
    </div>
  </div>

    <div class="actions form-group row">
      <div class="col-sm-2"></div>
      <div class="col-sm-10">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
<% end %>
