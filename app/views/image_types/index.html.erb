<p id="notice"><%= notice %></p>

<h1>Image Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_types.each do |image_type| %>
      <tr>
        <td><%= image_type.name %></td>
        <td><%= link_to 'Show', image_type %></td>
        <td><%= link_to 'Edit', edit_image_type_path(image_type) %></td>
        <td><%= link_to 'Destroy', image_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

