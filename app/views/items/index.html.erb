<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Brand</th>
      <th>Manufacturer</th>
      <th>Description</th>
      <th>Replaced by</th>
      <th>Replaced</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>

        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.brand %></td>
        <td><%= item.manufacturer %></td>
        <td><%= item.description %></td>
        <td><%= item.replaced_by %></td>
        <td><%= item.replaced %></td>
        <td><%= link_to 'Show', item %><br />
            <%= link_to 'Edit', edit_item_path(item) %><br />
            <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
