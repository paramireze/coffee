<p id="notice"><%= notice %></p>

<% @items.each do |item| %>

    <h2><%= item.brand %></h2>
    <div><%= item.price %></div>
    <div><%= item.description %></div>
    <div><%= item.replaced_by %></div>
    <div><%= item.replaced %></div>
    <div><%= link_to 'Show', item %>
        <%= link_to 'Edit', edit_item_path(item) %>
        <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></div>

    <table class="table table-striped">
      <thead>
      <tr>
        <th>item</th>
        <th>store</th>
        <th>Location</th>
        <th>Purchase Date</th>
        <th>Deleted</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% item.purchase.each do |purchase| %>
          <tr>
            <td><%= purchase.purchase_date %></td>
            <td><%= purchase.deleted %></td>
            <td><%= link_to 'Show', purchase %></td>
            <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
            <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <hr />
    <% end %>

<br>

