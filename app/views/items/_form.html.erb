<%= form_for(item) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= f.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :store, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.collection_radio_buttons(:store_id, Store.all, :id, :name) do |store| %>
          <div><%= store.label { store.radio_button } %> <%= store.text %> </div>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :price, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :brand, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :brand, class: "form-control" %>
    </div>
  </div>


  <div class="actions form-group row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
